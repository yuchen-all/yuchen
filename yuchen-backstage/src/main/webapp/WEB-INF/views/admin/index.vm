<script type="text/javascript">
    var memberTable;
    jQuery(function($){
        memberList();
    })
    /*
        参数解释：
        title	标题
        url		请求的url
        id		需要操作的数据id
        w		弹出层宽度（缺省调默认值）
        h		弹出层高度（缺省调默认值）
    */
    /*管理员-增加*/
    function admin_add(title,url,w,h){
        layer_show(title,url,w,h);
    }

    /*管理员-删除*/
    function admin_del(obj,id){
        layer.confirm('确认要删除吗？',function(index){
            //此处请求后台程序，下方是成功后的前台处理……
            jQuery.ajax({
                url: '$!{request.getContextPath()}/admin/delete',
                data: {memberid:id},
                type: "post",
                success: function (data) {
                    if (data.code > 0) {
                        layer.msg('已删除!',{icon:1,time:1000});
                        javascript:location.replace(location.href);
                    }
                    else {
                        layer.msg(data.msg,{icon:1,time:1000});
                    }
                }
            });
        });
    }
    /*管理员-编辑*/
    function admin_edit(title,url,id,w,h){
        layer_show(title,url,w,h);
    }
    /*管理员-停用*/
    function admin_stop(obj,id){
        layer.confirm('确认要停用吗？',function(index){
            //此处请求后台程序，下方是成功后的前台处理……
            jQuery.ajax({
                url: '$!{request.getContextPath()}/admin/stop',
                data: {memberid:id},
                type: "post",
                success: function (data) {
                    if (data.code > 0) {
                        layer.msg('已停用!',{icon: 5,time:1000});
                        javascript:location.replace(location.href);
                    }
                    else {
                        layer.msg(data.msg,{icon:1,time:1000});
                    }
                }
            });
        });
    }

    /*管理员-启用*/
    function admin_start(obj,id){
        layer.confirm('确认要启用吗？',function(index){
            //此处请求后台程序，下方是成功后的前台处理……
            jQuery.ajax({
                url: '$!{request.getContextPath()}/admin/start',
                data: {memberid:id},
                type: "post",
                success: function (data) {
                    if (data.code > 0) {
                        layer.msg('已启用!', {icon: 6,time:1000});
                        javascript:location.replace(location.href);
                    }
                    else {
                        layer.msg(data.msg,{icon:1,time:1000});
                    }
                }
            });
        });
    }

    /*批量删除*/
    function del_batch(){
        layer.confirm('确认要删除吗？',function(index){
            var ids = null;
            jQuery.each(jQuery('input:checkbox:checked'),function(){
                if(!ids){
                    ids = $(this).val();
                }else {
                    ids = ids + ',' + $(this).val();
                }
            });
            if(!ids || ids == undefined){
                layer.msg('参数为空!', {icon: 1,time:1000});
                return;
            }
            //此处请求后台程序，下方是成功后的前台处理……
            jQuery.ajax({
                url: '$!{request.getContextPath()}/admin/deleteBatch',
                data: {ids:ids},
                type: "post",
                success: function (data) {
                    if (data.code > 0) {
                        layer.msg('删除成功!', {icon: 6,time:1000});
                        javascript:location.replace(location.href);
                    }
                    else {
                        layer.msg(data.msg,{icon:1,time:1000});
                    }
                }
            });
        });
    }

    /*获取操作按钮*/
    function getAllOperation(row){
        var status = row.status;
        var  button;
        if(status == 1 && isPermission("/admin/stop")){
            if (!button || button == undefined){
                button = '<a style="text-decoration:none" onClick="admin_stop(this,'+row.id+')" href="javascript:;" title="停用"><i class="Hui-iconfont">&#xe631;</i></a>'
            }else {
                button += '<a style="text-decoration:none" onClick="admin_stop(this,'+row.id+')" href="javascript:;" title="停用"><i class="Hui-iconfont">&#xe631;</i></a>'
            }
        }
        if(status == -1 && isPermission("/admin/start")){
            if (!button || button == undefined){
                button = '<a style="text-decoration:none" onClick="admin_start(this,'+row.id+')" href="javascript:;" title="启用"><i class="Hui-iconfont">&#xe615;</i></a>'
            }else {
                button += '<a style="text-decoration:none" onClick="admin_start(this,'+row.id+')" href="javascript:;" title="启用"><i class="Hui-iconfont">&#xe615;</i></a>'
            }
        }
        if(isPermission("/admin/edit")){
            if (!button || button == undefined){
                button = '<a title="编辑" href="javascript:;" onclick="admin_edit("管理员编辑","memberId='+row.id+'","1","800","500")" class="ml-5" style="text-decoration:none"><i class="Hui-iconfont">&#xe6df;</i></a>'
            }else {
                button += '<a title="编辑" href="javascript:;" onclick="admin_edit("管理员编辑","memberId='+row.id+'","1","800","500")" class="ml-5" style="text-decoration:none"><i class="Hui-iconfont">&#xe6df;</i></a>'
            }
        }
        if(isPermission("/admin/delete")){
            if (!button || button == undefined){
                button = '<a title="删除" href="javascript:;" onclick="admin_del(this,'+row.id+')" class="ml-5" style="text-decoration:none"><i class="Hui-iconfont">&#xe6e2;</i></a></td>'
            }else {
                button += '<a title="删除" href="javascript:;" onclick="admin_del(this,'+row.id+')" class="ml-5" style="text-decoration:none"><i class="Hui-iconfont">&#xe6e2;</i></a></td>'
            }
        }
        return button;
    }

    function memberList(){
        memberTable = jQuery('#member-table').dataTable({
        'bAutoWidth' : false,
        'bFilter': false,
        "bLengthChange": false,
        'bProcessing': true,
        'bSort': true,
        'bServerSide': true,
        'sAjaxSource': '$!{request.getContextPath()}/admin/ajax',
        'fnServerParams': function(aoData) {
            getAllSearchValue(aoData);
        },
        'aoColumns': [ {
            'mDataProp' : 'id',
            'bSortable' : false,
            'mRender'   : function(data, type, row) {
                return "<input type='checkbox' value='"+row.id+"' name='member_check'>";
            }
        }, {
            'mDataProp' : 'id',
            'bSortable' : false
        }, {
            'mDataProp' : 'userName',
            'bSortable' : false
        }, {
            'mDataProp': 'mobile',
            'bSortable': false
        }, {
            'mDataProp': 'roles',
            'bSortable': false,
            'mRender'   : function(data, type, row) {
                var rolename = null;
                if (data){
                    for (var i= 0;i<data.length;i++){
                        if(!rolename || rolename == undefined){
                            rolename = data[i].name;
                        }else {
                            rolename = rolename + ',' + data[i].name;
                        }
                    }
                    return rolename;
                }
                return "";
            }
        }, {
            'mDataProp': 'createTime',
            'bSortable': false,
            'mRender': function(data, type, row) {
                if (data){
                    return formatDate(data, "yyyy-mm-dd HH:mm:ss");
                }
                return "";
            }
        }, {
            'mDataProp': 'status',
            'bSortable': false,
            'mRender': function(data, type, row) {
                if(data==1){
                    return '<span class="label label-success radius">已启用</span>'
                }
                if (data == -1){
                    return '<span class="label radius">已禁用</span>'
                }
            }
        }, {
            'mDataProp': 'operation',
            'bSortable': false,
            'mRender': function(data, type, row) {
                return getAllOperation(row);
            }
        }
        ]
     })
    }

    function getAllSearchValue(aoData){
        if(jQuery('#id').val()){
            aoData.push({
               "name": 'id',
                "value": jQuery('#id').val()
            });
        }
        if(jQuery('#mobile').val()){
            aoData.push({
                "name": 'mobile',
                "value": jQuery('#mobile').val()
            });
        }
        if(jQuery('#username').val()){
            aoData.push({
                "name": 'username',
                "value": jQuery('#username').val()
            });
        }
    }

    function searchMember(){
        memberTable.fnDraw();
    }
</script>